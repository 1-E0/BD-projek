<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="700.0" prefWidth="1000.0" styleClass="root" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bd.controller.ManajemenHadiahController">
    <VBox spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Button onAction="#handleKembali" styleClass="back-button" text="Kembali" />
            <Label styleClass="title-label" text="Manajemen Hadiah &amp; Voucher" />
        </HBox>
        <HBox spacing="20.0" VBox.vgrow="ALWAYS">
            <TableView fx:id="hadiahTable" HBox.hgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colNama" prefWidth="250.0" text="Nama Hadiah/Voucher" />
                    <TableColumn fx:id="colJenis" prefWidth="100.0" text="Jenis" />
                    <TableColumn fx:id="colPoin" prefWidth="100.0" text="Biaya Poin" />
                    <TableColumn fx:id="colStatus" prefWidth="100.0" text="Status" />
                </columns>
            </TableView>
            <VBox minWidth="350.0" prefWidth="400.0" spacing="10.0" styleClass="card">
                <Label styleClass="section-title" text="Form Hadiah" />
                <Label styleClass="input-label" text="Nama Hadiah/Voucher" />
                <TextField fx:id="txtNamaHadiah" />
                <Label styleClass="input-label" text="Jenis Hadiah" />
                <ComboBox fx:id="comboJenisHadiah" prefWidth="150.0" />
                <Label styleClass="input-label" text="Deskripsi" />
                <TextArea fx:id="txtDeskripsi" prefHeight="80.0" />
                <Label styleClass="input-label" text="Biaya Poin" />
                <TextField fx:id="txtBiayaPoin" />
                <VBox fx:id="voucherFields" spacing="10.0" managed="false" visible="false">
                    <Label styleClass="input-label" text="Nilai Voucher (dalam %)" />
                    <TextField fx:id="txtNilaiVoucher" />
                </VBox>
                <Label styleClass="input-label" text="Status" />
                <ComboBox fx:id="comboStatus" prefWidth="150.0" />
                <HBox alignment="CENTER_RIGHT" spacing="10.0" VBox.vgrow="ALWAYS">
                    <Button onAction="#handleBatalButton" styleClass="delete-button" text="Batal" />
                    <Button onAction="#handleSimpanButton" text="Simpan" />
                </HBox>
                <Button onAction="#handleHapusButton" maxWidth="Infinity" styleClass="delete-button" text="Hapus Hadiah Terpilih" />
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>